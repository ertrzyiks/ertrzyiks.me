import Layout from '../layouts/Layout.astro';
---

<Layout title="ertrzyiks - Mateusz Derks">
	<div class="contact">
    <h1>ertrzyiks</h1>

    <h2>
      Mateusz Derks
      <em>&lt;mateusz.derks[at]gmail.com&gt;</em>
    </h2>

    <a
      class="contact-link"
      href="https://github.com/ertrzyiks"
      title="Follow me on Github"
      >Github</a
    >
    <a
      class="contact-link"
      href="https://twitter.com/ertrzyiks"
      title="Follow me on Twitter"
      >Twitter</a
    >
    <a
      class="contact-link"
      href="https://blog.ertrzyiks.me"
      title="Read my blog"
      >Blog</a
    >
  </div>

  <!-- <div class="init-button">
    <img id="warriors" src="assets/cta.png" />
  </div> -->

  <div class="game-wrapper">
    <div id="game"></div>
  </div>
</Layout>

<style>

.contact {
  padding: 6em 1em;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto; }

.contact svg {
  max-width: 16px;
  max-height: 16px;
  vertical-align: top; }

.contact-link {
  margin-right: 1em; }

@media (max-width: 700px) {
  .contact {
    text-align: center; } }

.init-button {
  position: relative; }
.init-button > img {
  position: relative;
  z-index: 1; }
.init-button:after {
  content: "";
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  background-image: radial-gradient(circle, #4aadd6 60%, transparent 60.01%);
  background-repeat: no-repeat;
  background-position: 50%;
  transform: scale(0);
  opacity: 0; }

.init-button.is-animated:after {
  animation: ripple 1500ms infinite; }

@keyframes ripple {
  0% {
    transform: scale(0);
    opacity: 0; }
  60% {
    transform: scale(1.2);
    opacity: 0.5; } }


    .game-wrapper canvas {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 2; }

h1 {
  color: #4aadd6;
  display: inline; }

h2 {
  font-size: 1em;
  color: #333333;
  font-weight: normal; }

a {
  color: #4aadd6;
  text-decoration: none; }

</style>

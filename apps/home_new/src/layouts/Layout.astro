---
import '../styles/normalize.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en_US">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>{title}</title>
    <meta name="description" content="Private website of ertrzyiks" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html, body {
  margin: 0;
  padding: 0;
  background-color: #fff; }

html {
  height: 100%; }

body {
  color: #444;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; }

</style>

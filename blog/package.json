{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "3.4.1"
  },
  "scripts": {
    "start": "PUBLIC_ASSETS_PATH=http://localhost:8080/ hexo server --watch",
    "build": "hexo clean && npm run build-theme && hexo generate",
    "prebuild-theme": "rm -fr ./themes/nono/source/js/* && rm -fr ./themes/nono/source/css/*",
    "build-theme": "NODE_ENV=production webpack",
    "test": "npm run build",
    "build:prod": "hexo clean && hexo generate --config _config.yml,_config.prod.yml && touch public/.static",
    "deploy": "hexo deploy"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "hexo": "^3.2.0",
    "hexo-deployer-git": "^0.3.1",
    "hexo-featured-image": "^0.2.1",
    "hexo-generator-archive": "^0.1.4",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-feed": "^1.2.2",
    "hexo-generator-index": "^0.2.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-migrator-ghost": "^0.1.0",
    "hexo-prism-plugin": "^2.2.0",
    "hexo-render-pug": "^1.2.0",
    "hexo-renderer-marked": "^0.3.0",
    "hexo-server": "^0.2.0",
    "lodash.throttle": "^4.1.1",
    "webpack-dev-server": "^2.9.7"
  },
  "devDependencies": {
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "extract-css-block-webpack-plugin": "^1.3.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.9",
    "raven-js": "^3.20.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "uglify-js": "^2.6.0",
    "webpack": "^3.10.0",
    "webpack-manifest-plugin": "^1.3.2"
  }
}

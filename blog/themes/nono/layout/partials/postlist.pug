each post in page.posts.data
  section.post(id="post-{{id}}")
    h3.post-title
      a(href=url_for(post.path))
        = post.title

      span.post-date
        = time(post.date, 'LL')

    .post-content
      if post.featured_image
        .post-thumbnail(
          style=`background-image: ${lqip_for(post.featured_image)}`
          data-lazy-src=post.featured_image
          alt=`the hand made image dedicated to the post number ${post.id}`
        )

      .post-excerpt !{post.excerpt}
        .post-tags !{list_tags(post.tags, {show_count: false, style: ''})}

script
 include lazy_images.js
